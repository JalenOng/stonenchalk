<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <!-- Include Bootstrap separately due to url recognition -->
    <!-- ref: https://github.com/mileszs/wicked_pdf/issues/470 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <%= wicked_pdf_stylesheet_link_tag 'results' %>
    <%= wicked_pdf_javascript_include_tag 'results' %>
  </head>
  <body>
    <div class="container">
      <h1>Results</h1>

      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Month</th>
            <th>Residents</th>
            <th>Utilization</th>
          </tr>
        </thead>

        <tbody>
          <% @results.each do |result| %>
            <tr>
              <td><%= result[:month] %></td>
              <td><%= result[:number_of_paying_residents] %></td>
              <td><%= ( result[:utilization] * 10).round / 10.0 %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>